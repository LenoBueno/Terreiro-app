# Configurações do npm
# Garante que o package-lock.json use a versão 2 (recomendado para npm 7+)
lockfile-version=2

# Instala as dependências exatamente como especificado no package-lock.json
exact=true

# Não atualiza o package-lock.json automaticamente
package-lock=true

# Usa a versão mais recente do npm para instalar pacotes
engine-strict=true

# Configura o registro do npm
registry=https://registry.npmjs.org/

# Se estiver usando um registro privado, descomente e atualize a linha abaixo
# @seu-escopo:registry=https://seu-registro-privado.com/

# Configura o arquivo de autenticação para registros privados
# npmrc=path/para/seu/.npmrc

# Configura o diretório de cache do npm
cache=${HOME}/.npm

# Configura o diretório global do npm
prefix=${APPDATA}/npm

# Configura o diretório do cache do npm
cache-lock-retries=10
cache-lock-stale=60000
cache-lock-wait=10000

# Configura o nível de log
loglevel=notice

# Configura o tempo limite para requisições HTTP
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Configura o número de tentativas para instalação de pacotes
fetch-retries=5

# Configura o uso de cores na saída do terminal
color=true

# Configura o uso de emoji na saída do terminal
emoji=true

# Configura o uso de progresso na instalação de pacotes
progress=true

# Configura o uso de scripts pós-instalação
ignore-scripts=false

# Configura o salvamento exato das versões ao instalar pacotes
save-exact=true

# Configura o salvamento de dependências opcionais
save-optional=true

# Configura o salvamento de dependências de desenvolvimento
save-dev=true

# Configura o salvamento de dependências de produção
save-prod=true

# Configura o salvamento de dependências peer
save-peer=true

# Configura o salvamento de dependências bundle
save-bundle=true

# Configura o salvamento de dependências de pacotes
save-prefix=^

# Configura o uso de package-lock.json
package-lock=true

# Configura o uso de shrinkwrap
shrinkwrap=true

# Configura o uso de audit
audit=true

# Configura o nível de auditoria
audit-level=low

# Configura o uso de fundos
fund=false

# Configura o uso de notificações
update-notifier=true

# Configura o uso de scripts pré-publicação
ignore-prepublish=false

# Configura o uso de scripts pré-instalação
ignore-install-scripts=false

# Configura o uso de scripts pós-instalação
ignore-postinstall-scripts=false

# Configura o uso de scripts de desinstalação
ignore-uninstall-scripts=false

# Configura o uso de scripts de pré-versionamento
ignore-prepublishOnly=false

# Configura o uso de scripts de versão
ignore-version-scripts=false

# Configura o uso de scripts de preparação
ignore-prepare=false

# Configura o uso de scripts de preparação para empacotamento
ignore-prepack=false

# Configura o uso de scripts pós-empacotamento
ignore-postpack=false

# Configura o uso de scripts de pré-desinstalação
ignore-prepare-scripts=false

# Configura o uso de scripts de pré-versionamento
ignore-prepareOnly=false

# Configura o uso de scripts de versão
ignore-versionOnly=false

# Configura o uso de scripts de pré-publicação
ignore-prepublishOnly=false

# Configura o uso de scripts de publicação
ignore-publish-scripts=false

# Configura o uso de scripts de pós-publicação
ignore-postpublish-scripts=false

# Configura o uso de scripts de pré-desinstalação
ignore-preuninstall-scripts=false

# Configura o uso de scripts de pós-desinstalação
ignore-postuninstall-scripts=false

# Configura o uso de scripts de pré-versionamento
ignore-prerelease-scripts=false

# Configura o uso de scripts de versão
ignore-version-scripts=false

# Configura o uso de scripts de preparação
ignore-prepare-scripts=false

# Configura o uso de scripts de preparação para empacotamento
ignore-prepack-scripts=false

# Configura o uso de scripts pós-empacotamento
ignore-postpack-scripts=false
