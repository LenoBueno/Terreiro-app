# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,css,scss,md}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{diff,md}]
max_line_length = 0

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab

[Dockerfile]
indent_style = space
indent_size = 4
